{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "inputs": [
    {
      "id": "phase",
      "type": "pickString",
      "description": "Select phase to validate",
      "options": [
        "requirements",
        "design",
        "tasks",
        "all"
      ],
      "default": "all"
    }
  ],
  "tasks": [
    {
      "label": "Kiro: Validate Spec",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate.sh ${input:featureName} ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Show Version",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-version.sh",
      "group": "none",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "always", "panel": "dedicated", "clear": true }
    },
    {
      "label": "Kiro: Self-Update",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-self-update.sh",
      "group": "none",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "always", "panel": "dedicated", "clear": true }
    },
    {
      "label": "Kiro: Bump Version (patch)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-bump-version.sh --patch",
      "group": "none",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "always", "panel": "dedicated", "clear": true }
    },
    {
      "label": "Kiro: Run Command (wrapper)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-cmd.sh",
      "args": [],
      "group": "none",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "reveal": "always", "panel": "shared", "clear": false }
  },
    {
      "label": "Kiro: Validate Latest Spec",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate-latest.sh ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Validate Latest Spec (Auto)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate-latest-task.sh ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Validate Spec (All)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate.sh ${input:featureName} all",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
