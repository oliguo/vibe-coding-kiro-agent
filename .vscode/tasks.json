{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "inputs": [
    {
      "id": "featureName",
      "type": "promptString",
      "description": "Enter the kebab-case feature name (e.g., user-login)",
      "default": "example-feature"
    },
    {
      "id": "phase",
      "type": "pickString",
      "description": "Select phase to validate",
      "options": [
        "requirements",
        "design",
        "tasks",
        "all"
      ],
      "default": "all"
    }
  ],
  "tasks": [
    {
      "label": "Kiro: Validate Spec",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate.sh ${input:featureName} ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Validate Latest Spec",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate-latest.sh ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Validate Latest Spec (Auto)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate-latest-task.sh ${input:phase}",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Kiro: Validate Spec (All)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/kiro-spec-validate.sh ${input:featureName} all",
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
